{
    "name": "mlxprs",
    "displayName": "mlxprs MarkLogic developer tools",
    "description": "MarkLogic SJS and XQuery development tools",
    "version": "1.2.2",
    "publisher": "mlxprs",
    "engines": {
        "vscode": "^1.43.0"
    },
    "icon": "images/mlxprs-vscode.png",
    "galleryBanner": {
        "color": "#1D252D",
        "theme": "dark"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Debuggers",
        "Other"
    ],
    "repository": "https://github.com/mikrovvelle/mlxprs",
    "license": "(Apache-2.0 AND MIT)",
    "activationEvents": [
        "onCommand:extension.sendXQuery",
        "onCommand:extension.sendJSQuery",
        "onLanguage:xquery-ml",
        "onLanguage:javascript"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sendXQuery",
                "title": "MarkLogic: Eval XQuery"
            },
            {
                "command": "extension.sendJSQuery",
                "title": "MarkLogic: Eval JS"
            },
            {
                "command": "extension.connectServer",
                "title": "MarkLogic: Connect Debug Server"
            },
            {
                "command": "extension.disconnectServer",
                "title": "MarkLogic: Disconnect Debug Server"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "MarkLogic connection configuration",
            "properties": {
                "marklogic.host": {
                    "type": "string",
                    "default": "localhost",
                    "description": "hostname for MarkLogic instance"
                },
                "marklogic.port": {
                    "type": "integer",
                    "default": 8000,
                    "description": "port on which to reach the MarkLogic server"
                },
                "marklogic.username": {
                    "type": "string",
                    "default": "admin",
                    "description": "username for MarkLogic connection"
                },
                "marklogic.password": {
                    "type": "string",
                    "default": "admin",
                    "description": "password for MarkLogic connection"
                },
                "marklogic.documentsDb": {
                    "type": "string",
                    "default": "Documents",
                    "description": "database against which to evaluate queries"
                },
                "marklogic.modulesDb": {
                    "type": "string",
                    "default": "Modules",
                    "description": "modules database used in queries"
                },
                "marklogic.modulesRoot": {
                    "type": "string",
                    "default": "/",
                    "description": "modules root if using filesystem"
                },
                "marklogic.authType": {
                    "type": "string",
                    "default": "DIGEST",
                    "description": "only DIGEST or BASIC for now"
                },
                "marklogic.ssl": {
                    "type": "boolean",
                    "default": false,
                    "description": "whether to use ssl for the http connection"
                },
                "marklogic.pathToCa": {
                    "type": "string",
                    "default": "",
                    "description": "path to certificate authority (e.g. for self-signed certificates)"
                }
            }
        },
        "languages": [
            {
                "id": "xquery-ml",
                "aliases": [
                    "XQuery (ML)",
                    "xquery-ml"
                ],
                "extensions": [
                    ".xq",
                    ".xql",
                    ".xqm",
                    ".xqy",
                    ".xquery"
                ],
                "configuration": "./xquery-ml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xquery-ml",
                "scopeName": "source.xquery-ml",
                "path": "./syntaxes/xquery-ml.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "xquery-ml",
                "path": "./snippets/snippets.json"
            }
        ],
        "breakpoints": [
            {
                "language": "javascript"
            }
        ],
        "debuggers": [
            {
                "type": "ml-jsdebugger",
                "label": "MarkLogic JS Debugger",
                "program": "./dist/jsDebug.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [],
                        "properties": {
                            "path": {
                                "type": "string",
                                "description": "location of script",
                                "default": ""
                            },
                            "txnId": {
                                "type": "string",
                                "description": "Transaction ID to use with launch.",
                                "default": ""
                            }
                        }
                    },
                    "attach": {
                        "required": [
                            "path",
                            "debugServerName"
                        ],
                        "properties": {
                            "path": {
                                "type": "string",
                                "description": "Absolute path to a text file.",
                                "default": ""
                            },
                            "debugServerName": {
                                "type": "string",
                                "description": "Debug server name, please connect the server before use",
                                "default": ""
                            },
                            "rid": {
                                "type": "string",
                                "description": "Request Id",
                                "default": ""
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "ml-jsdebugger",
                        "request": "launch",
                        "name": "Evaluate Current JavaScript Module"
                    },
                    {
                        "type": "ml-jsdebugger",
                        "request": "attach",
                        "name": "Attach to Remote JavaScript Request",
                        "path": "${workspaceFolder}",
                        "debugServerName": "Enter debug server name"
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "MarkLogic: Evaluate Current JavaScript Module",
                        "description": "A new configuration for 'debugging' a user selected javascript file.",
                        "body": {
                            "type": "ml-jsdebugger",
                            "request": "launch",
                            "name": "Evaluate Current JavaScript Module"
                        }
                    },
                    {
                        "label": "MarkLogic: Attach to Remote JavaScript Request",
                        "description": "A new configuration for 'debugging' a user selected javascript file.",
                        "body": {
                            "type": "ml-jsdebugger",
                            "request": "attach",
                            "name": "Attach to Remote JavaScript Request",
                            "path": "^\"\\${workspaceFolder}\"",
                            "debugServerName": "Enter debug server name"
                        }
                    }
                ],
                "variables": {}
            }
        ]
    },
    "scripts": {
        "copy-files": "npm run copy-files --prefix server",
        "vscode:prepublish": "./node_modules/.bin/webpack --mode production && ./node_modules/.bin/webpack --mode production --config ./server/webpack.config.js",
        "compile": "./node_modules/webpack/bin/webpack.js --mode none && ./node_modules/webpack/bin/webpack.js --mode none --config ./server/webpack.config.js",
        "pretest": "tsc -b client/test/tsconfig.json",
        "test": "node client/out/test/runTest.js --full-trace",
        "watch": "./node_modules/webpack/bin/webpack.js --mode none --watch & ./node_modules/webpack/bin/webpack.js --mode none --watch --config ./server/webpack.config.js"
    },
    "devDependencies": {
        "@types/esprima": "^4.0.2",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.1",
        "@types/vscode": "^1.43.0",
        "@types/webpack": "^4.41.7",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "await-notify": "^1.0.1",
        "eslint": "^6.8.0",
        "esprima": "^4.0.1",
        "https-proxy-agent": "^5.0.0",
        "js-yaml": "^3.13.1",
        "marklogic": "^2.4.0",
        "merge-options": "^2.0.0",
        "mocha": "^7.1.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "request": "^2.88.2",
        "request-promise": "^4.2.5",
        "vscode-debugadapter": "^1.38.0",
        "vscode-test": "^1.3.0",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "vscode-debugprotocol": "^1.39.0",
        "vscode-languageclient": "^6.1.1"
    }
}
