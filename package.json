{
  "name": "mlxprs",
  "displayName": "mlxprs",
  "description": "",
  "version": "0.0.1",
  "publisher": "mikrovvelle",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.sendXQuery"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.sendXQuery",
        "title": "MarkLogic: Eval XQuery"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "MarkLogic connection configuration",
      "properties": {
        "marklogic.host": {
          "type": "string",
          "default": "localhost",
          "description": "hostname for MarkLogic instance"
        },
        "marklogic.port": {
          "type": "integer",
          "default": 8000,
          "description": "port on which to reach the MarkLogic server"
        },
        "marklogic.username": {
          "type": "string",
          "default": "admin",
          "description": "username for MarkLogic connection"
        },
        "marklogic.password": {
          "type": "string",
          "default": "admin",
          "description": "password for MarkLogic connection"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vscode": "^0.11.0",
    "marklogic-node-typescript-definitions": "^0.1.3"
  },
  "dependencies": {
    "marklogic": "^1.0.5",
    "marklogic-node-typescript-definitions": "^0.1.3",
    "winston": "^2.2.0"
  }
}
