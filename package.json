{
    "name": "mlxprs",
    "displayName": "mlxprs MarkLogic developer tools",
    "description": "MarkLogic SJS and XQuery development tools",
    "version": "0.7.5",
    "publisher": "mlxprs",
    "engines": {
        "vscode": "^1.34.0"
    },
    "icon": "images/mlxprs-vscode.png",
    "galleryBanner": {
        "color": "#1D252D",
        "theme": "dark"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "repository": "https://github.com/mikrovvelle/mlxprs",
    "license": "(Apache-2.0 AND MIT)",
    "activationEvents": [
        "onCommand:extension.sendXQuery",
        "onCommand:extension.sendJSQuery",
        "onLanguage:xquery-ml",
        "onLanguage:javascript"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sendXQuery",
                "title": "MarkLogic: Eval XQuery"
            },
            {
                "command": "extension.sendJSQuery",
                "title": "MarkLogic: Eval JS"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "MarkLogic connection configuration",
            "properties": {
                "marklogic.host": {
                    "type": "string",
                    "default": "localhost",
                    "description": "hostname for MarkLogic instance"
                },
                "marklogic.port": {
                    "type": "integer",
                    "default": 8000,
                    "description": "port on which to reach the MarkLogic server"
                },
                "marklogic.username": {
                    "type": "string",
                    "default": "admin",
                    "description": "username for MarkLogic connection"
                },
                "marklogic.password": {
                    "type": "string",
                    "default": "admin",
                    "description": "password for MarkLogic connection"
                },
                "marklogic.documentsDb": {
                    "type": "string",
                    "default": "Documents",
                    "description": "database against which to evaluate queries"
                },
                "marklogic.modulesDb": {
                    "type": "string",
                    "default": "Modules",
                    "description": "modules database used in queries"
                },
                "marklogic.authType": {
                    "type": "string",
                    "default": "DIGEST",
                    "description": "only DIGEST or BASIC for now"
                },
                "marklogic.ssl": {
                    "type": "boolean",
                    "default": false,
                    "description": "whether to use ssl for the http connection"
                },
                "marklogic.pathToCa": {
                    "type": "string",
                    "default": "",
                    "description": "path to certificate authority (e.g. for self-signed certificates)"
                }
            }
        },
        "languages": [
            {
                "id": "xquery-ml",
                "aliases": [
                    "XQuery (ML)",
                    "xquery-ml"
                ],
                "extensions": [
                    ".xq",
                    ".xql",
                    ".xqm",
                    ".xqy",
                    ".xquery"
                ],
                "configuration": "./xquery-ml.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xquery-ml",
                "scopeName": "source.xquery-ml",
                "path": "./syntaxes/xquery-ml.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "xquery-ml",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "compile-tsc": "tsc -b ./tsconfig.json",
        "watch-tsc": "tsc -b ./tsconfig.json -w",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "hints": "copyfiles -f ./server/**/*.json server/dist/etc/",
        "vscode:prepublish": "webpack --mode production && webpack --mode production --config ./server/webpack.config.js",
        "compile": "webpack --mode none && webpack --mode none --config ./server/webpack.config.js",
        "watch": "webpack --mode none --watch & webpack --mode none --config ./server/webpack.config.js"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.11.3",
        "copyfiles": "^2.1.0",
        "js-yaml": "^3.13.1",
        "marklogic": "^2.2.0",
        "merge-options": "^1.0.1",
        "ts-loader": "^6.0.2",
        "typescript": "^3.4.2",
        "vscode": "^1.1.34",
        "webpack": "^4.33.0",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    }
}
