// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "port": 6004,
      "protocol": "inspector",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/server/**/*.js"
      ],
      "cwd": "${workspaceFolder}/server/"
    },
    {
			"name": "Launch Debug Adapter Server",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/client/JSDebugger/mlDebug.ts",
			"args": [
				"--server=4711"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			]
		},
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "npm",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Launch Client Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/client",
        "--extensionTestsPath=${workspaceRoot}/client/out/test/suite/index"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/client/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: pretest",
      "cwd": "${workspaceFolder}/client"
    },
    {
      "name": "Launch Server Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}/server",
        "--extensionTestsPath=${workspaceRoot}/server/out/test/suite/index"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/server/out/test/**/*.js"
      ],
      "preLaunchTask": "npm: copy-files",
      "cwd": "${workspaceFolder}/server"
    }
  ],
  "compounds": [
		{
			"name": "Extension + Server",
			"configurations": [ "Launch Extension", "Launch Debug Adapter Server" ]
		}
	]
}
